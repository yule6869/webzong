
@{
    ViewBag.Title = "tianjiaxinwen";
    Layout = "~/Areas/sqjy/Views/Shared/_LayoutPage2.cshtml";
}
@section scripts{
    <script src="~/Areas/sqjy/js/ueditor/ueditor.config.js"></script>
    <script src="~/Areas/sqjy/js/ueditor/ueditor.all.min.js"></script>
    <script src="~/Scripts/moment/moment.min.js"></script>
    <script src="~/Scripts/date-range-picker/daterangepicker.js"></script>
    <script src="~/Areas/sqjy/js/admin/tianjiaxinwen.js"></script>
}
<!-- Start Page Header -->
<div class="page-header">
    <h1 class="title">新闻编辑</h1>
    <ol class="breadcrumb">
        <li><a href="index.html">Dashboard</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">Text Editors</li>
    </ol>



</div>
<!-- End Page Header -->
<!-- Start Presentation -->
<div class="row presentation">

    <div class="col-lg-8 col-md-6 titles">
        <span class="icon color8-bg"><i class="fa fa-pencil"></i></span>
        <h1>添加新闻</h1>
        <h4>按照您希望的方式编辑新闻</h4>
    </div>

</div>
<!-- End Presentation -->
<!-- //////////////////////////////////////////////////////////////////////////// -->
<!-- START CONTAINER -->
<div class="container-padding">



    <!-- Start Row -->
    <div class="row">


        <div class="col-md-12">
            <div class="panel panel-default">

                <div class="panel-title">
                    新闻详情
                </div>

                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group" id="biaoti">
                            <label for="input001" class="col-sm-2 control-label form-label">新闻标题</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="input001" />
                                <span id="helpBlock" class="help-block" style="display:none;">标题不能为空</span>
                            </div>
                        </div>

                        <div class="form-group ">
                            <label class="col-sm-2 control-label form-label">新闻类别</label>
                            <div class="col-sm-10">
                                <select class="selectpicker" id="leixing">
                                    <option>社区新闻</option>
                                    <option>上级文件</option>
                                    <option>通知公告</option>

                                </select>
                            </div>
                        </div>

                        <div class="form-group ">
                            <label class="col-sm-2 control-label form-label">新闻时间</label>
                            <div class="col-sm-10">
                                <fieldset>
                                    <div class="control-group">
                                        <div class="controls">
                                            <div class="input-prepend input-group">
                                                <span class="add-on input-group-addon"><i class="fa fa-calendar"></i></span>
                                                <input type="text" id="date-picker" class="form-control" value="03/18/2015" />
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>

                        <div class="form-group" id="leirong">
                            <label for="input001" class="col-sm-2 control-label form-label">新闻内容</label>
                            <div class="col-sm-10">
                                <div id="input0201"></div>

                                <span id="helpBloc2k" class="help-block" style="display:none;">新闻内容不能为空</span>
                            </div>
                        </div>

                        <div class="row">
                            <button class="btn btn-success col-sm-offset-2" type="button" id="queding"><i class="fa fa-camera"></i>确认</button>
                            <button class="btn btn-warning" type="button" id="quxiao" onclick="window.location.replace('../xinwenguanli/xinwenguanli.aspx')"><i class="fa fa-warning"></i>取消</button>


                        </div>


                    </div>



                </div>

            </div>
        </div>


    </div>
    <!-- End Row -->




</div>
<!-- END CONTAINER -->
<!-- //////////////////////////////////////////////////////////////////////////// -->
