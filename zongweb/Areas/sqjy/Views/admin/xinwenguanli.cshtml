@model List<sqjymodel.XinWen>
@{
    ViewBag.Title = "xinwenguanli";
    Layout = "~/Areas/sqjy/Views/Shared/_LayoutPage2.cshtml";
}

@{ 
    string caozuo(string zhi, string id)
    {
        if (zhi == "False")
        {
            string str = "<button class=\"btn-default\" type=\"button\" onclick=\"window.open('/xinwen/xw.aspx?id=" + id + "&cs=a')\">预览</button><button class=\"btn-success\" type=\"button\" onclick=\"window.location.href='xinwenguanli.aspx?id=" + id + "&cs=a'\">发布</button><button class=\"btn-warning\" type=\"button\" onclick=\"window.location.href='/admin/tianjiaxinwen/tianjiaxinwen.aspx?id=" + id + "'\">修改</button>";
            return str;
        }
        else
        {
            string str = "<button class=\"btn-danger\" type=\"button\" onclick=\"window.location.href='xinwenguanli.aspx?id=" + id + "&cs=b'\">取消发布</button>";
            return str;
        }
    }
}
<div class="page-header">
    <h1 class="title">新闻管理</h1>
    <ol class="breadcrumb">
        <li><a href="index.html">Dashboard</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">Text Editors</li>
    </ol>



</div>

<div class="row presentation">

    <div class="col-lg-8 col-md-6 titles">
        <span class="icon color8-bg"><i class="fa fa-pencil"></i></span>
        <h1>新闻管理</h1>
        <h4>按照您希望的方式编辑新闻</h4>
    </div>

    <div class="col-lg-4 col-md-6">
        <ul class="list-unstyled list">

            <li><i class="fa fa-check"></i><a href="tianjiaxinwen">添加新闻</a></li>

        </ul>
    </div>

</div>

<div class="container-padding">


    <!-- Start Row -->
    <div class="row">

        <!-- Start Panel -->
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-title">
                    新闻表
                </div>
                <div class="panel-body table-responsive">

                    <table id="example0" class="table display">
                        <thead>
                            <tr>

                                <th>标题</th>
                                <th>作者</th>
                                <th>发布日期</th>
                                <th>简介</th>
                                <th>新闻类型</th>
                                <th>操作</th>
                            </tr>
                        </thead>

                        <tfoot>
                            <tr>

                                <th>标题</th>
                                <th>作者</th>
                                <th>发布日期</th>
                                <th>简介</th>
                                <th>新闻类型</th>
                                <th>操作</th>
                            </tr>
                        </tfoot>

                        <tbody>
                            @foreach (sqjymodel.XinWen item in Model)
                            {
                                <tr>
                                    <td>@item._biaoti</td>
                                    <td>@item._zuozhe</td>
                                    <td>@item._shijian2</td>
                                    <td>@item._jianjie</td>
                                    <td>@item._leixing</td>
                                    <td>
                                        @Html.Raw(caozuo(item._shifouxianshi,item._id))
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- End Panel -->
    </div>
    <!-- End Row -->

</div>

