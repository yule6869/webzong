                <div class="clearfix visible-xs-block"></div>
            </div>
        }

        <div class="button2" style="float:right;margin-top:10px;width:auto;"><a href="NewList" style="color:#d73240;">更多>></a></div>

    </div>

</div>
@{ 
    string goujianclass(string str)
    {
        int a = Convert.ToInt32(str);
        if (a == 1 || a == 2 || a == 5 || a == 6)
            return "col-lg-3 col-md-4 col-sm-6 col-xs-6";
        if (a == 3 || a == 7)
            return "col-lg-3 col-md-4 hidden-sm hidden-xs";
        if (a == 4 || a == 8)
            return "col-lg-3 hidden-md hidden-sm hidden-xs";
        else
            return "false";
    }
}
