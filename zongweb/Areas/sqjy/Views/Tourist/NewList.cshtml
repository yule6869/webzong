@model List<sqjymodel.XinWen>[]
@{
    ViewBag.Title = "NewList";
    Layout = "~/Areas/sqjy/Views/Shared/_LayoutPage1.cshtml";
}
@section Styles{

    <link href="~/Areas/sqjy/css/NewList.css" rel="stylesheet" />
}

@section scripts{

    <script src="~/Areas/sqjy/js/NewList.js"></script>
}
<div class="lujing">
    <ol class="breadcrumb" style="margin:0;font-size:16px;">
        <li><a href="Index">首页</a></li>
        <li class="active">新闻中心</li>
    </ol>
</div>

<div class="touxia" style="background:#f4f4f4">
    <div class="row" style="background:white;border:1px solid #dbdbdb;font-size:16px;">
        <div class="col-md-1 col-xs-2" style="text-align:center;padding:8px 0 8px 0">
            新闻类别：
        </div>
        <div class="col-md-11 col-xs-10" style="border-left:1px solid #dbdbdb;">
            <div class="row" id="leibie">
                <div class="col-md-2" style="text-align:center;padding-top:8px;padding-bottom:5px"><span style="background:#ff6a00;color:white;padding:5px;font-size:16px;cursor:pointer;">全部</span></div>
                <div class="col-md-2" style="text-align:center;padding-top:8px;padding-bottom:5px"><span style="padding:5px;font-size:16px;cursor:pointer;">社区新闻</span></div>
                <div class="col-md-2" style="text-align:center;padding-top:8px;padding-bottom:5px"><span style="padding:5px;font-size:16px;cursor:pointer;">上级文件</span></div>
                <div class="col-md-2" style="text-align:center;padding-top:8px;padding-bottom:5px"><span style="padding:5px;font-size:16px;cursor:pointer;">通知公告</span></div>

            </div>
        </div>
    </div>


</div>

<div class="row" id="kcbf" style="background:#f4f4f4;padding-bottom:25px;padding-top:25px">
    <div class="col-md-9 col-sm-9 " id="kcbf2">
        <div style="border:1px solid #dbdbdb;background:white" id="yy">
            @foreach (sqjymodel.XinWen item in Model[0])
            {
                <div class="row" style="padding:10px 0 10px 0;border-bottom:1px solid #dbdbdb;border-right:2px solid #dbdbdb;" data-leixing="@item._leixing">
                    <div class="col-md-6 col-sm-8 col-xs-8 xinwenbiaoti"><a href="New?id=@item._id&cs=b" class="tooltip-test" data-toggle="tooltip" title="@item._biaoti">@item._biaoti</a></div>
                    <div class="col-md-2 col-md-offset-4 col-sm-4 col-xs-4"><span class="shijian">@item._shijian2</span></div>
                </div>
            }
        </div>


        <div class="row" style="text-align:center;" id="yema">
            <nav aria-label="Page navigation">

            </nav>
        </div>

    </div>

    <div class="col-md-3 col-sm-3">
        <div class="row" style="border:1px solid #dbdbdb;padding:0"  id="zxxw">
            <div class="col-md-12" style="text-align:center;color:white;padding:10px 0 10px 0;font-size:18px;background:#d73240;">最新新闻</div>
            @foreach (sqjymodel.XinWen item in Model[1])
            {
                <div class="row" style="padding:10px 0 10px 0;border-bottom:1px solid #dbdbdb;border-right:2px solid #dbdbdb;">
                    <div class="col-md-6 col-sm-8 col-xs-8 xinwenbiaoti2"><a href="New?id=@item._id&cs=b" class="tooltip-test" data-toggle="tooltip" title="@item._biaoti">@item._biaoti</a></div>
                    <div class="col-md-2 col-md-offset-4 col-sm-4 col-xs-4"><span class="shijian">@item._shijian2</span></div>
                </div>
            }

        </div>

        <div class="row" style="border:1px solid #dbdbdb;padding:0px 10px 0 10px;margin-top:15px;background:#d73240;">
            <div class="col-md-12" style="text-align:center;color:white;padding:10px 0 10px 0;font-size:18px">最新热门课程</div>

        </div>
        <div class="row" style="border-left:1px solid #dbdbdb;border-right:1px solid #dbdbdb;border-bottom:1px solid #dbdbdb;">
            @foreach (sqjymodel.KeCheng item in ViewBag.kechengs)
            {
                <div class="col-md-7 col-sm-10 col-xs-6" style="padding-top:10px;text-align:center;">
                    <img src="@item._kechengtupian" style="width:100%"/>
                    <p class="bee">
                        <a href="KeCheng?id=@item._id&cs=b" class="tooltip-test" data-toggle="tooltip" title="@item._kechengming">@item._kechengming</a>
                    </p>
                </div>
            }
        </div>
    </div>



</div>

